<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anketa.AnketaHealthActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <TextView
        android:id="@+id/quest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Здоровье"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/quest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заболевания собаки"
        tools:ignore="InvalidId" />

    <Spinner
        android:id="@+id/sp_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" />
    <TextView
        android:id="@+id/quest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отношение собаки к еде"
        tools:ignore="InvalidId" />
    <Spinner
        android:id="@+id/sp_option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" />
    <TextView
        android:id="@+id/quest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Жила ли собака на улице когда-нибудь?"
        tools:ignore="InvalidId" />
    <Spinner
        android:id="@+id/sp_option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" />
    <TextView
        android:id="@+id/quest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подвергалась ли собака избиениям и издевательствам?"
        tools:ignore="InvalidId" />
    <Spinner
        android:id="@+id/sp_option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" />

    <Button
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="Сохранить и продолжить"
        android:textSize="20dp" />

</LinearLayout>