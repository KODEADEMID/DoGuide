<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anketa.MiddleAnketaCharacterActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="#fff4c7">

    <TextView

        android:id="@+id/quest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Часть 3.1: Характер"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/citynovalt"/>



    <TextView
        android:background="#ffe1a0"
        android:fontFamily="@font/citynovalt"
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="1. Назвали бы вы свою собаку агрессивной?"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_1"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >

    <Spinner
        android:id="@+id/spinner_agress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />

    </RelativeLayout>

    <TextView
        android:background="#ffe1a0"
        android:fontFamily="@font/citynovalt"
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="2. Агрессия вашей собаки проявляется в сторону:"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_2"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >

    <Spinner
        android:id="@+id/spinner_storona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />
    </RelativeLayout>

    <TextView
        android:background="#ffe1a0"
        android:fontFamily="@font/citynovalt"
        android:id="@+id/question_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="3.В каких случаях ваша собака проявляет агрессию?"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_3"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >

    <Spinner
        android:id="@+id/spinner_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />

    </RelativeLayout>
    <TextView
        android:background="#ffe1a0"
        android:fontFamily="@font/citynovalt"
        android:id="@+id/question_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="4. Любит ли ваша собака подвижные игры?"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_4"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >

    <Spinner
        android:id="@+id/spinner_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />
    </RelativeLayout>

    <Button
        android:background="#ffe1a0"
        android:fontFamily="@font/citynovalt"
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Сохранить и продолжить"
        android:textSize="20dp" />

</LinearLayout>