<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anketa.StartAnketaMainInfoActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/questionnaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заполните анкету:"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
       />
    <TextView
    android:id="@+id/quest_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Часть 1: Основная информация"
    android:textAlignment="center"
    android:textSize="20dp"
        android:textStyle="italic"

        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"/>


    <TextView
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:text="1. Введите кличку собаки:"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/answer_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:hint="Кличка вашей собаки"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="23sp" />


    <TextView
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="2. Выберете из списка породу вашей собаки:"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="17dp" />

    <Spinner
        android:id="@+id/spinner_breed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/question_2"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/question_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="3. Какого возраста ваша собака?"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="17dp" />
    <Spinner
        android:id="@+id/spinner_age"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/question_2"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/question_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="4. Как давно собака живет с вами?"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="17dp" />
    <Spinner
        android:id="@+id/spinner_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/question_2"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="23sp"
        />

    <Button
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:padding="5dp"
        android:text="Сохранить и продолжить"
        android:textSize="20dp" />
</LinearLayout>