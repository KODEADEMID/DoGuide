<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anketa.AnketaHealthActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="#fff4c7">

    <TextView
        android:fontFamily="@font/citynovalt"
        android:id="@+id/quest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Часть 2: Здоровье"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"/>



    <TextView
        android:fontFamily="@font/citynovalt"
        android:id="@+id/quest"
        tools:ignore="InvalidId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:text="1. Какие у вашей собаки есть заболевания?"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:background="#ffe1a0"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_below="@id/quest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >

    <Spinner
        android:textColor="@android:color/black"
        android:id="@+id/sp_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp" />
    </RelativeLayout>
    <TextView
        android:fontFamily="@font/citynovalt"
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="2. Каково отношение вашей собаки к еде?"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:background="#ffe1a0"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_below="@id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >
    <Spinner
        android:id="@+id/sp_option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>

    </RelativeLayout>
    <TextView
        android:fontFamily="@font/citynovalt"
        android:id="@+id/quest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:background="#ffe1a0"
        android:textSize="20dp"
        android:text="3. Жила ли собака на улице когда-нибудь?"
        />

    <RelativeLayout
        android:layout_below="@id/quest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >

    <Spinner
    android:textColor="@android:color/black"
    android:id="@+id/sp_option2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textSize="15sp"   />
    </RelativeLayout>

    <TextView
        android:id="@+id/quest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/citynovalt"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="4. Подвергалась ли собака избиениям и издевательствам?"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:background="#ffe1a0"
        android:textSize="20dp" />
    <RelativeLayout
        android:layout_below="@id/quest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >

    <Spinner
        android:textColor="@android:color/black"
        android:id="@+id/sp_option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"  />

    </RelativeLayout>

    <Button
        android:fontFamily="@font/citynovalt"
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="Сохранить и продолжить"
        android:background="#ffe1a0"
        android:textSize="20dp"/>

</LinearLayout>